import os
from typing import List
from pydantic_settings import BaseSettings
from pydantic import validator

# 模拟环境变量
os.environ["CORS"] = 'https://video-factory-c8a2a.web.app,https://luxivideo.com,https://www.luxivideo.com'


class Settings(BaseSettings):
    CORS: str = "http://localhost:3000"

    @property
    def cors_list(self) -> list[str]:
        return [i.strip() for i in self.CORS.split(",")]

settings = Settings()
print(settings.CORS)